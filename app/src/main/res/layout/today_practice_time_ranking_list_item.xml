<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/each_ranking_background_view"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />
    
    <TextView
        android:id="@+id/ranking_number_text_view"
        android:text="1"
        android:textSize="40dp"
        android:layout_width="20dp"
        android:layout_height="60dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/each_ranking_background_view"
        android:layout_marginStart="16dp"
        />
    
    <TextView
        android:id="@+id/user_name_text_view"
        android:text="ユーザー名"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/each_ranking_background_view"
        app:layout_constraintStart_toEndOf="@+id/ranking_number_text_view"
        android:layout_marginTop="40dp"
        android:layout_marginStart="20dp"
        />

    <TextView
        android:id="@+id/practice_time_text_view"
        android:text="練習時間"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/user_name_text_view"
        app:layout_constraintStart_toEndOf="@+id/ranking_number_text_view"
        android:layout_marginTop="40dp"
        android:layout_marginStart="20dp"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/vertical_guideline_first"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="160dp"
        />

    <TextView
        android:id="@+id/user_name_person_text_view"
        android:text="田中"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/each_ranking_background_view"
        app:layout_constraintStart_toEndOf="@+id/vertical_guideline_first"
        android:layout_marginTop="40dp"
        />

    <TextView
        android:id="@+id/number_hour_edit_text"
        android:text="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/user_name_person_text_view"
        app:layout_constraintStart_toEndOf="@+id/vertical_guideline_first"
        android:layout_marginTop="40dp"
        />

    <TextView
        android:id="@+id/hour_text_view"
        android:text="時間"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/user_name_person_text_view"
        app:layout_constraintStart_toEndOf="@+id/number_hour_edit_text"
        android:layout_marginTop="40dp"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/vertical_guideline_second"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="212dp"
        />

    <TextView
        android:id="@+id/number_minute_edit_text"
        android:text="30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/user_name_person_text_view"
        app:layout_constraintStart_toEndOf="@+id/vertical_guideline_second"
        android:layout_marginTop="40dp"
        />

    <TextView
        android:id="@+id/minute_text_view"
        android:text="分"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/user_name_person_text_view"
        app:layout_constraintStart_toEndOf="@+id/number_minute_edit_text"
        android:layout_marginTop="40dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>